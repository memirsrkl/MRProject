@using System.Security.Claims
@{
    var isAuthenticated = User.Identity.IsAuthenticated;
    var isAdmin = User.IsInRole("Admin");
    var userName = User.Identity.Name;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MRP</title>
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> 
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container-fluid">

            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                MRP Yönetim
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">

                @if (isAuthenticated)
                {
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Meeting" asp-action="CreateMeeting">
                                Toplantı Oluştur
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Meeting" asp-action="MyApplications">
                                Toplantı Başvurularım
                            </a>
                        </li>
                        

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Meeting" asp-action="UpcomingMeetings">
                                Katılacağım Toplantılar
                            </a>
                        </li>

                        @if (isAdmin)
                        {
                            <!-- SADECE ADMIN -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-warning"
                                       href="#"
                                       role="button"
                                       data-bs-toggle="dropdown"
                                       aria-expanded="false">
                                    Yönetim Paneli
                                </a>

                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li>
                                        <a class="dropdown-item"
                                               asp-controller="Users"
                                               asp-action="Index">
                                            Kullanıcılar
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                               asp-controller="Reservation"
                                               asp-action="Index">
                                            Rezervasyonlar
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                               asp-controller="Admin"
                                               asp-action="AddMeetingRoom">
                                            Toplantı Salonu Ekle
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                    </ul>

                    <!-- Sağ Menü -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <span class="nav-link text-info">
                                👤 @userName
                            </span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-sm btn-danger ms-2">
                                    Çıkış
                                </button>
                            </form>
                        </li>
                    </ul>
                }

            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center mt-5 mb-3 text-muted">
        © @DateTime.Now.Year - MRP Yönetim Sistemi
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>